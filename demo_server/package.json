  "scripts": {
    "build": "rimraf lib/* && tsc",
    "start:debug": "npm run build && npm run watch:debug",
    "watch:debug": "concurrently -k -p '[{name}]' -n 'typescript,nodemon' -c \"yellow.bold,green.bold\" \"npm run watch:ts\" \"npm run serve:debug\"",
    "watch:ts": "tsc -w",
    "serve": "cross-env NODE_ENV=development nodemon --watch lib lib/app.js",
    "serve:debug": "cross-env NODE_ENV=development nodemon --watch lib --inspect lib/app.js",
    "test": "jest"
  },
